<div class="container show_product">
  <p id="notice"><%= notice %></p>
  
  <div class="row">
    <div class="col-md-4 col-sm-12">
      <% if @product.image_url %>
        <%= image_tag(@product.image_url, class:"img-responsive") %>
      <% end %>
    </div>

    <div class="col-md-8 col-sm-12">
      <div class="product_info">
        <h2 class="product_header"><%= @product.name %></h2>
        <p>Average Rating: <div class="rated" data-score="<%= @product.average_rating %>"></div> </p>
      	<p><%= @product.description %>
        <p><strong>Colour: </strong><%= @product.colour %></p>
        <p><strong>Price: </strong><%= @product.price %> $</p>
      	<p><strong>Product URL: </strong><%= @product.image_url %></p>
      </div>
      
      <div class="show_btn">
        <%= link_to '', products_path, class: 'show_edit btn btn-default glyphicon glyphicon-backward' %>
        <%= link_to '', edit_product_path(@product), class: 'show_edit btn btn-default glyphicon glyphicon-edit' %>
      </div>

    </div>
    <div class="row">
      <div class="col-md-6 col-sm-12">
        <%= render 'new_comment' %>
      </div>
    
      <div class="col-md-6 col-sm-12">
        <%= render 'comments'%>
      </div>
     

</div>
