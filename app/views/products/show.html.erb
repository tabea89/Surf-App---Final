<div class="container show_product">
  <p id="notice"><%= notice %></p>
  
  <div class="row">
    <div class="col-md-6 col-sm-12">
      <% if @product.image_url %>
        <%= image_tag(@product.image_url, class:"img-responsive") %>
      <% end %>
    </div>

    <div class="col-md-6 col-sm-12">
      <h2 class="product_header"><%= @product.name %></h2>
      <h4><strong><%= @product.price %> $</strong></h4>
      <div class="rated" id="average-rating" data-score="<%= @product.average_rating %>"></div><br>
      <p><strong>Description: </strong></p>
    	<p><%= @product.description %>
      <p><strong>Colour: </strong><%= @product.colour %></p>
     	<p><strong>Product URL: </strong><%= @product.image_url %></p>
      <div class="show_btn">
        <%= link_to '', products_path, class: 'show_edit btn btn-default glyphicon glyphicon-backward' %>
        <%= link_to '', edit_product_path(@product), class: 'show_edit btn btn-default glyphicon glyphicon-edit' %>
      </div>
      <div class="cta">
        <%= link_to 'Add to basket', products_path %>
       </div>

       <%= form_with(url: '/payments/create') do |form| %>
         <%= render partial: "shared/stripe_checkout_button" %>
           <%= hidden_field_tag(:product_id, @product.id) %>
       <% end %>

    </div>

    <div class="row">
      <div class="col-md-6 col-sm-12">
        <%= render 'new_comment' %>
      </div>
    
      <div class="col-md-6 col-sm-12">
        <%= render 'comments'%>
      </div>
    </div>
     

</div>
