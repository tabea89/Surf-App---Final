
  <p id="notice"><%= notice %></p>

<div class="container product_overview">
  <h1 class="product_header">Products</h1>
  <button class="add_product"><%= link_to 'New Product', new_product_path %></button>
  <div class="row">
    <% @products.each do |product| %>
      <div class="col-sm-2 col-md-4">
        <%= image_tag(product.image_url, class:"img-responsive") %>
        <a href="#"><h1><%= product.name %></h1></a>
        <p><%= product.description %></p>
        <p>Colour: <%= product.colour %></p>
        <p>Price: <%= product.price %> $</p><hr>
        <button class="edit_product"><%= link_to 'Show', product %></button>
        <button class="edit_product"><%= link_to 'Edit', edit_product_path(product) %></button>
        <button class="edit_product"><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></button>
      </div><!-- /col -->
    <% end %>
  </div>
</div>







