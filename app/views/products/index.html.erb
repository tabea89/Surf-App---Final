<div class="container">
  <p id="notice"><%= notice %></p>
  <h1>Products</h1>

  <table>
    <thead class="header">
      <tr>
        <th>Name</th>
        <th>Description</th>
        <th>Image url</th>
        
      </tr>
    </thead>
    
    <tbody>
      <% @products.each do |product| %>
        <tr class="product_table">
          <td><%= product.name %></td>
          <td><%= product.description %></td>
          <td><%= product.image_url %></td>
          <td><button class="action1"><%= link_to 'Show', product %></button></td>
          <td><button><%= link_to 'Edit', edit_product_path(product) %></button></td>
          <td><button><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></button></td> 
        </tr>
      <% end %>

    </tbody>
  </table>

  <br>

  <button class="add_product"><%= link_to 'New Product', new_product_path %></button>

</div>
